---
// src/components/FeatureCard.astro
export interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="p-6 bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 border-t-4 border-green-600">
  <div class="text-5xl mb-4 text-center">{icon}</div>
  <h4 class="text-xl font-bold text-gray-900 mb-2 text-center">{title}</h4>
  <p class="text-gray-600 text-sm text-center">{description}</p>
</div>