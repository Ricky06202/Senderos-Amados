  <!-- Menú Móvil -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-green-900 px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-green-700 text-center"
  >
    <a
      href="/#acerca"
      class="block hover:bg-green-700 px-3 py-2 rounded-md text-base font-medium"
      >Acerca</a
    >
    <a
      href="/#servicios"
      class="block hover:bg-green-700 px-3 py-2 rounded-md text-base font-medium"
