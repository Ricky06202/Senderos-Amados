---
// src/components/GalleryGrid.astro
export interface Props {
  images: string[];
}

const { images } = Astro.props;
---

<div class="grid grid-cols-2 md:grid-cols-3 gap-4">
  {images.map((imgSrc, index) => (
    <div class="relative overflow-hidden rounded-lg shadow-xl aspect-square group">
      <img 
        src={imgSrc} 
        alt={`Foto de Senderos Amados ${index + 1}`} 
        class="w-full h-full object-cover transform group-hover:scale-105 transition duration-500" 
      />
      {/* <div class="absolute inset-0 bg-black bg-opacity-10 group-hover:bg-opacity-0 transition duration-500"></div> */}
    </div>
  ))}
</div>