---
// src/components/Footer.astro
import { Image } from 'astro:assets';
import logo from '../assets/Senderos Amados.png';
const currentYear = new Date().getFullYear()
---

<footer id="contacto" class="bg-gray-800 text-white mt-12">
  <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="flex justify-center mb-8">
      <Image src={logo} alt="Senderos Amados Logo" class="h-20 w-auto opacity-80 hover:opacity-100 transition-opacity" />
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 text-center md:text-left">
      <div>
        <h4 class="text-lg font-semibold mb-3 text-yellow-400">Contáctanos</h4>
        <p class="text-gray-400">Bajo Boquete Centro, Chiriqui, Panamá</p>
        <p class="text-gray-400">Teléfono: +507 6673-3897</p>
        <p class="text-gray-400">Email: rsanjur15@gmail.com</p>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-3 text-yellow-400">
          Enlaces Rápidos
        </h4>
        <ul>
          <li>
            <a href="#acerca" class="text-gray-400 hover:text-white"
              >Acerca de la Finca</a
            >
          </li>
          <li>
            <a href="#galeria" class="text-gray-400 hover:text-white"
              >Ver Galería</a
            >
          </li>
          <li>
            <a href="#" class="text-gray-400 hover:text-white"
              >Política de Privacidad</a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="mt-8 pt-4 border-t border-gray-700 text-center">
      <p class="text-sm text-gray-400">
        © {currentYear} Senderos Amados. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
