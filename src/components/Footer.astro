const currentYear = new Date().getFullYear();
import { Icon } from 'astro-icon/components';
---

<footer id="contacto" class="bg-gray-800 text-white mt-12">
  <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center md:text-left">
      <div>
        <h4 class="text-lg font-semibold mb-3 text-yellow-400">Contáctanos</h4>
        <p class="text-gray-400">Bajo Boquete Centro, Chiriqui, PANAMA</p>
        <p class="text-gray-400">Teléfono: +507 6673-3897</p>
        <p class="text-gray-400">Email: rsanjur15@gmail.com</p>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-3 text-yellow-400">Enlaces Rápidos</h4>
        <ul>
          <li><a href="#acerca" class="text-gray-400 hover:text-white">Acerca de la Finca</a></li>
          <li><a href="#galeria" class="text-gray-400 hover:text-white">Ver Galería</a></li>
          <li><a href="#" class="text-gray-400 hover:text-white">Política de Privacidad</a></li>
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-3 text-yellow-400">Síguenos</h4>
        <div class="flex flex-col space-y-3 justify-center md:justify-start">
          <a href="https://www.instagram.com/senderosamados/" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-3 text-gray-400 hover:text-white transition duration-300 justify-center md:justify-start">
            <Icon name="mdi:instagram" class="w-6 h-6 shrink-0" />
            <span>@senderosamados</span>
          </a>
          <a href="https://x.com/senderosamados" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-3 text-gray-400 hover:text-white transition duration-300 justify-center md:justify-start">
            <Icon name="simple-icons:x" class="w-6 h-6 shrink-0" />
            <span>@senderosamados</span>
          </a>
        </div>
      </div>
    </div>
    
    <div class="mt-8 pt-4 border-t border-gray-700 text-center">
      <p class="text-sm text-gray-400">© {currentYear} Senderos Amados. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>